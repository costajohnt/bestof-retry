<div class="jumbotron">
  <div class="container text-center">
    <h1>Best In The Land</h1>
    <h2>Find, create, and vote for the best things</h2>
  </div>
</div>

<div class="container text-center">
  <%= form_tag posts_path, { method: "get", :class => 'navbar-form', :role => 'search'} do %>
  <div class="input-group input-group-lg">
    <%= text_field_tag :search, params[:search], placeholder: "search for the best", class: 'form-control', required: true %>
    <div class="input-group-btn">
      <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
    <% end %>
</div>

<div class="footer">
  <div class="container">
    <div class="row text-center">
      <h4>Built by <a href='https://www.linkedin.com/in/costajohnt' target="_blank">John Costa</a>- San Francisco, CA 2015 </h4>
    </div>
  </div>
</div>