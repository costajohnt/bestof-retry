<!-- FORM FOR CREATING A NEW COMMENT -->
<div class="container-fluid">
	<div class="col-sm-6 col-sm-offset-3"  id="commentForm">
		<div class="form-group">	
			<%= form_for [@post, @comment] do |f| %>
				<div class="form-group">
					<%= f.text_field :title, class: 'form-control commentform', autocomplete: 'off', placeholder: 'What?', :autofocus => true %>	
				</div>
				<div class="form-group">
					<%= f.text_field :location, class: 'form-control commentform', autocomplete: 'off', placeholder: 'Where?' %>	
				</div>
				<div class="text-right">
					<%= f.submit "save", class: 'btn btn-primary' %>	
				</div>

			<% end %>
		</div>
		<br>
		<br>

		<ul class="list-group">
			<% Comment.order(:cached_votes_up).each do |comment| %>
				<li class="list-group-item clearfix">
					<div class="col-xs-10">
						<h4><%= comment.title %></h4> 
						<div class="text-muted"><%=  comment.location %></div>	
						<div class="text-right">
							<small><%= link_to "Delete", post_comment_path(@post, comment), method: :delete %></small>	
						</div>
					</div>
					<div class="col-xs-2">
						<%= link_to like_comment_path(comment), method: :put do %>
							<i class="glyphicon glyphicon-chevron-up"></i>
							<%= comment.get_upvotes.size %>
						<% end %>

						<%= link_to dislike_comment_path(comment), class:"glyphicon glyphicon-chevron-down", method: :put do %>
						downvote
							<%= comment.get_downvotes.size %>
						<% end %>	
					</div>
				</li>
			<% end %>
		</ul>
	</div>
</div>


